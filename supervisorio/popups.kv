#:kivy 1.11.1

<ModbusPopup>:
    title: "configurações MODBUS"
    size_hint_y: None
    size_hint_x: 0.4
    height: 200
    BoxLayout:
        id: layout
        orientation: 'vertical'
        GridLayout:
            coils: 2
            rows: 2
            Label:
                text: "IP"
                fonte_size: 14
            TextInput:
                id: txt_ip
                text: "127.0.0.1"
                fonte_size: 14
                halign: 'center'
                valign: 'center'
            Label:
                text: "Porta"
                fonte_size: 14
            TextInput:
                id: txt_porta
                text: "502"
                fonte_size: 14
                halign: 'center'
                valign: 'center'
        BoxLayout:
            orientation: 'horizontal'
            Button:
                size_hint_y: None
                height: 40
                text: 'Conectar'
                on_release:
                    root.clearInfo()
                    app.root.startDataRead(txt_ip.text, int(txt_porta.text))
            Button:
                size_hint_y: None
                height: 40
                text: 'Fechar'
                on_release:
                    root.dismiss()
                    root.clearInfo()


<motorPopup>:
    title: "Variáveis do Motor"
    size_hint_y: None
    size_hint_x: 0.6
    height: 350
    width: 450
    BoxLayout:
        id: blayout
        orientation: "vertical"
        padding: [10, 10, 10, 10]
        GridLayout:
            cols: 4
            row_default_height: 40
            row_force_default: True
            size_hint_y: None
            height: self.minimum_height
            padding: [20, 5]
            Label:
                text: "Tensao linha RS [V]:"
            Label:
                id: var1
                text: "0"

            Label:
                text: "Corrente fase R [A]:"
            Label:
                id: var2
                text: "0"

            Label:
                text: "Tensao linha ST [V]:"
            Label:
                id: var3
                text: "0"

            Label:
                text: "Corrente fase S [A]:"
            Label:
                id: var4
                text: "0"

            Label:
                text: "Tensao linha TR [V]:"
            Label:
                id: var5
                text: "0"

            Label:
                text: "Corrente fase T [A]:"
            Label:
                id: var6
                text: "0"

            Label:
                text: "Potencia Aparente [kVA]:"
            Label:
                id: var7
                text: "0"

            Label:
                text: "Fator de potencia:"
            Label:
                id: var8
                text: "0"
            
            Label:
                text: "Frequencia [Hz]:"
            Label:
                id: var9
                text: "0"

            Label:
                text: "Temperatura [C]:"
            Label:
                id: var10
                text: "0"

           
            
        BoxLayout:
            orientation: 'horizontal'
            Button:
                size_hint_y: None
                height: 40
                text: 'Fechar'
                on_release:
                    root.dismiss() 



<ScanPopup>:
    title: "configurações Scantime"
    size_hint_y: None
    size_hint_x: 0.4
    height: 150
    BoxLayout:
        id: layout
        orientation: 'vertical'
        GridLayout:
            coils: 2
            rows: 1
            Label:
                text: "ScanTime [ms]"
                fonte_size: 14
            TextInput:
                id: txt_st
                fonte_size: 14
                halign: 'center'
                valign: 'center'
        BoxLayout:
            orientation: 'horizontal'
            Button:
                size_hint_y: None
                height: 40
                text: 'Configurar'
                on_release:
                    app.root._scan_time = int(txt_st.text)
            Button:
                size_hint_y: None
                height: 40
                text: 'Fechar'
                on_release:
                    root.dismiss()

<DataGraphPopup>:
    #configuração das propriedades do popup dos gráficos
    title: ''
    BoxLayout:
        orientation: 'vertical' 
        TimeSeriesGraph:
            id: graph
            xlabel: 'Horario'
            ylabel: 'Pressao'
            background_color : 0.5,0.5,0.5,0.5
            x_ticks_minor: 1
            x_ticks_major: 5
            y_ticks_major: 100
            x_grid_label: True
            y_grid_label: True
            padding: 5
            xgrid: True
            ygrid: True
            xmin: 0
            ymin: 0
        BoxLayout: 
            orientation: 'vertical'
            size_hint: (1,0.05)
            BoxLayout:
                orientation: 'horizontal'
                size_hint: (0.5,1)
                Label:
                    size_hint: (0.3,1)
                    text: "Numero de pontos do grafico"
                LabelCheckBoxDataGraph:
                    id: mp20
                    on_kv_post:
                        self.ids.label.text = '20'
                        self.ids.checkbox.group = 'cb_group'
                        active = True
                LabelCheckBoxDataGraph:
                    id: mp50
                    on_kv_post:
                        self.ids.label.text = '50'
                        self.ids.checkbox.group = 'cb_group'
                LabelCheckBoxDataGraph:
                    id: mp100
                    on_kv_post:
                        self.ids.label.text = '100'
                        self.ids.checkbox.group = 'cb_group'
            Button: 
                text: 'Fechar'
                size_hint: (0.2,1)
                on_release: root.dismiss()


<LabelCheckBoxDataGraph>:
    otientation: 'horizontal'
    size_hint: (0.1,1)
    CheckBox:
        id:checkbox
        on_active: app.root._graph['co_pressao'].ids.graph.setMaxPoints(int (label.text),0) if app.root is not None else None
    Label:
        id: label


<HistGraphPopup>:
    title: 'Historicos'
    BoxLayout:
        orientation: 'vertical' 
        TimeSeriesGraph:
            id: graph
            xlabel: 'Horario'
            ylabel: 'Pressao'
            background_color : 0.5,0.5,0.5,0.5
            x_ticks_minor: 1
            x_ticks_major: 5
            y_ticks_major: 0.5
            y_ticks_minor: 0.5
            x_grid_label: True
            y_grid_label: True
            padding: 5
            xgrid: True
            ygrid: True
            xmin: 0
            ymin: 0
        
        BoxLayout:
            id: sensores
            orientation: 'horizontal'
            size_hint: (1,0.1)

        BoxLayout:
            orientation: 'horizontal'
            size_hint: (1,0.1)
            Label:
                text: 'Timestamp inicial \r\n [size=12] (DD/MM/AAAA HH:MM :SS)[/size]'
                halign: 'center'
                markup: True
            TextInput:
                id: txt_init_time
                size_hint: (1,0.8)
                halign: 'center'
                valign: 'middle'
                multiline: False
            Label:
                text: 'Timestamp final \r\n [size=12] (DD/MM/AAAA HH:MM :SS)[/size]'
                halign: 'center'
                markup: True
            TextInput:
                id: txt_final_time
                size_hint: (1,0.8)
                halign: 'center'
                valign: 'middle'
                multiline: False
            # LabelCheckBoxDataGraph:
            #     id: mp20
            #     on_kv_post:
            #         self.ids.label.text = '20'
            #         self.ids.checkbox.group = 'cb_group'
            #         active = True

            Button:
                text: 'Fechar'
                size_hint: (0.2,1)
                on_release: root.dismiss()

<LabelCheckBoxHistGraph>:
    otientation: 'horizontal'
    size_hint: (0.05,1)
    CheckBox:
        id:checkbox
        on_active: app.root.getDataDB()
    Label:
        id: label
        font_size: 12
        bold: True

