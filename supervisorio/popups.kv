#:kivy 1.11.1

<ModbusPopup>:
    title: "configurações MODBUS"
    size_hint_y: None
    size_hint_x: 0.4
    height: 200
    BoxLayout:
        id: layout
        orientation: 'vertical'
        GridLayout:
            coils: 2
            rows: 2
            Label:
                text: "IP"
                fonte_size: 14
            TextInput:
                id: txt_ip
                text: "127.0.0.1"
                fonte_size: 14
                halign: 'center'
                valign: 'center'
            Label:
                text: "Porta"
                fonte_size: 14
            TextInput:
                id: txt_porta
                text: "502"
                fonte_size: 14
                halign: 'center'
                valign: 'center'
        BoxLayout:
            orientation: 'horizontal'
            Button:
                size_hint_y: None
                height: 40
                text: 'Conectar'
                on_release:
                    root.clearInfo()
                    app.root.startDataRead(txt_ip.text, int(txt_porta.text))
            Button:
                size_hint_y: None
                height: 40
                text: 'Fechar'
                on_release:
                    root.dismiss()
                    root.clearInfo()


<ScanPopup>:
    title: "configurações Scantime"
    size_hint_y: None
    size_hint_x: 0.4
    height: 150
    BoxLayout:
        id: layout
        orientation: 'vertical'
        GridLayout:
            coils: 2
            rows: 1
            Label:
                text: "ScanTime [ms]"
                fonte_size: 14
            TextInput:
                id: txt_st
                fonte_size: 14
                halign: 'center'
                valign: 'center'
        BoxLayout:
            orientation: 'horizontal'
            Button:
                size_hint_y: None
                height: 40
                text: 'Configurar'
                on_release:
                    app.root._scan_time = int(txt_st.text)
            Button:
                size_hint_y: None
                height: 40
                text: 'Fechar'
                on_release:
                    root.dismiss()
<DataGraphPopup>
    title: ''
    BoxLayout:
        orientation: 'vertical' 
        TimeSeriesGraph:
            id: graph
            xlabel: 'Horario'
            ylabel: 'temperatura'
            background_color : 0.5,0.5,0.5,0.5
            x_ticks_minor: 1
            x_ticks_major: 5
            y_ticks_major: 100
            x_grid_label: True
            y_grid_label: True
            padding: 5
            xgrid: True
            ygrid: True
            xmin: 0
            ymin: 0
            ymax: 500
        BoxLayout: 
            orientation: 'vertical'
            size_hint: (1,0.05)
            BoxLayout:
                orientation: 'horizontal'
                size_hint: (0.5,1)
                Label:
                    size_hint: (0.3,1)
                    text: "Numero de pontos do grafico"
                LabelCheckBoxDataGraph:
                    id: mp20
                    on_kv_post:
                        self.ids.label.text = '20'
                        self.ids.checkbox.group = 'cb_group'
                        active = True
                LabelCheckBoxDataGraph:
                    id: mp50
                    on_kv_post:
                        self.ids.label.text = '50'
                        self.ids.checkbox.group = 'cb_group'
                LabelCheckBoxDataGraph:
                    id: mp100
                    on_kv_post:
                        self.ids.label.text = '100'
                        self.ids.checkbox.group = 'cb_group'
            Button: 
                text: 'Fechar'
                size_hint: (0.2,1)
                on_release: root.dismiss()


<LabelCheckBoxDataGraph>:
    otientation: 'horizontal'
    size_hint: (0.1,1)
    CheckBox:
        id:checkbox
        on_active: app.root._graph['co_temp_t'].ids.graph.setMaxPoints(int (label.text),0) if app.root is not None else None
    Label:
        id: label

<ControlePopup>:
    title: "Controle do sistema"
    size_hint_y: None
    size_hint_x: 0.4
    height: 150
    BoxLayout:
        id: layout
        orientation: 'horizontal'
        BoxLayout:
            id: CompressorCommand
            orientation: 'vertical'
            Label:
                text: "Comando do Compressor"
                fonte_size: 14
            Button:
                text: 'Ligar'
                on_release: app.root.acionamentoMotor(1)
            Button:
                text: 'Desligar'
                on_release: app.root.acionamentoMotor(0)
            Button:
                text: 'Reset'
                on_release: app.root.acionamentoMotor(2)
        BoxLayout:
            id: layout
            orientation: 'vertical'
            Label:
                text: "Tipo de partida"
                fonte_size: 14
            Button:
                id: btsoft
                text: 'ATS48 Soft-start'
                on_release: app.root.modoPartidaMotor(1)
            Button:
                id: btinv
                text: 'ATV31 Inversor'
                on_release: app.root.modoPartidaMotor(2)
            Button:
                id: btdir
                text: 'Tesys Direta'
                on_release: app.root.modoPartidaMotor(3)